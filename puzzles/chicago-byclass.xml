<?xml version="1.0"?>
<puzzle name="Cicago/Century of Progress Puzzle">
  <board>
	<size>7, 8</size>
        <goaltype>byclass</goaltype>
        <!-- mirrorident=False is required when same class of koma exists,
             and we now specify id of one of them. -->
        <mirrorident>False</mirrorident>
  </board>
  <clssiz>
	<class name="big"><size>2, 2</size></class>
	<class name="horiz"><size>1, 2</size></class>
	<class name="vert"><size>2, 1</size></class>
	<class name="small"><size>1, 1</size></class>
  </clssiz>
  <komaset>
	<koma name="east">
	  <class>big</class><init>1, 1</init>
	</koma>
	<koma name="west">
	  <class>big</class><init>4, 5</init>
	  <goal>4, 1</goal>
	</koma>
	<koma name="airplanes">
	  <class>horiz</class><init>1, 3</init>
	</koma>
	<koma name="automobiles">
	  <class>horiz</class><init>2, 3</init>
	</koma>
	<koma name="world">
	  <class>vert</class><init>1, 5</init>
	</koma>
	<koma name="wonders">
	  <class>vert</class><init>1, 6</init>
	</koma>
	<koma name="chicago">
	  <class>horiz</class><init>3, 1</init>
	</koma>
	<koma name="you">
	  <class>small</class><init>3, 3</init>
	</koma>
	<koma name="see">
	  <class>small</class><init>3, 4</init>
	</koma>
	<koma name="century">
	  <class>vert</class><init>4, 1</init>
	</koma>
	<koma name="progress">
	  <class>vert</class><init>4, 2</init>
	</koma>
	<koma name="machinery">
	  <class>horiz</class><init>4, 3</init>
	</koma>
	<koma name="inventions">
	  <class>horiz</class><init>5, 3</init>
	</koma>
  </komaset>
</puzzle>
